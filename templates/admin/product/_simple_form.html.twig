{{ form_start(form) }}
	{% if form.vars.errors|length > 0 %}
		<div class="alert alert-fill alert-danger alert-icon">
			{{ icon('cross-circle') }} {{ 'form_contains_error' | trans }}
		</div>
	{% endif %}

	<div class="row g-4 mb-3">
		{{ form_label(form.type, null, {
			label_attr : {
				'class' : 'mb-2'
			}
		}) }}
		{{ form_errors(form.type) }}
		<div class="custom-control-group">
			{{ form_widget(form.type, {
				attr : {
					"data-controller" : "custom-choice",
					'class' : 'custom-control custom-radio custom-control-pro no-control',
				}
			}) }}
		</div>
	</div>

	<div class="row g-4">
		<div class="">
			{{ form_row(form.name) }}
		</div>
	</div>
	<div class="row g-4 mb-3">
		<div class="">
			{{ form_row(form.categories) }}
		</div>
	</div>
	<div class="row g-4 mb-3">
		<div class="form-control-wrap mb-3">
			{{ form_label(form.fixedPrice) }}
			<div class="input-group">
				{{ form_widget(form.fixedPrice) }}
				<div class="input-group-append">
					<span class="input-group-text">F CFA</span>
				</div>
				{{ form_errors(form.fixedPrice) }}
				{{ form_help(form.fixedPrice) }}
			</div>
		</div>
	</div>
	<div class="row g-4 mb-3">
		<div class="form-control-wrap mb-3">
			{{ form_label(form.makingPrice) }}
			<div class="input-group">
				{{ form_widget(form.makingPrice) }}
				<div class="input-group-append">
					<span class="input-group-text">F CFA</span>
				</div>
				{{ form_errors(form.makingPrice) }}
				{{ form_help(form.makingPrice) }}
			</div>
		</div>
	</div>
	<div class="">
		{{ form_row(form.stockQuantity) }}
	</div>
	<div class="row g-4">
		<div class="">
			{{ form_row(form.thumbnailUrl) }}
		</div>
	</div>

	<div class="mt-4 text-center">
		<div class="form-group">
			<button type="submit" class="d-none btn btn-lg btn-primary">{{ button_label|default('save') | trans }}</button>
		</div>
	</div>
{{ form_end(form) }}
