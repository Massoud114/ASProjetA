<div
		class="nk-block"
		data-action="submit-confirm:async:submitted->reload-content#refreshContent"
		{{ stimulus_target('reload-content', 'content') }}
>
	<div class="card">
		<div class="card-inner-group">
			<div class="card-inner p-0">
				<div
						class="nk-tb-list mb-3"
				>

					<table class="table table-orders">
						<thead class="tb-odr-head">
							<tr class="tb-odr-item">
								<th class="tb-odr-info">
									<span class="tb-odr-id{{ sorted(rows, 'row.name') ? ' focus' : '' }}">
										{{ sort_by(rows, 'Name'|trans, 'row.name') }}
									</span>
								</th>
								<th class="tb-odr-action">&nbsp;</th>
							</tr>
						</thead>
						<tbody class="tb-odr-body">
							{% for category in rows %}
								{{ include('admin/category/_row.html.twig', { category: category }) }}
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="card-inner">
			<div class="nk-block-between-md g-3">
				<div class="g">
					{{ paginate(rows) }}
				</div>
				<div class="g">
					<div class="pagination-goto d-flex justify-content-center justify-content-md-start gx-3">
						Nombre total d'éléments : {{ rows|length }}
					</div>
				</div>
			</div>
		</div>

		<form
				method="post"
				class="delete-form"
				id=""
				data-controller="delete-form submit-confirm"
				data-submit-confirm-title-value="{{ 'delete_warning_title'|trans }}"
				data-submit-confirm-text-value="{{ 'delete_warning_text'|trans }}"
				data-submit-confirm-icon-value="{{ 'warning' }}"
				data-submit-confirm-confirm-button-text-value="{{ 'delete.label'|trans }}"
				data-submit-confirm-cancel-value="{{ 'cancel'|trans }}"
				data-submit-confirm-async-submit-value="true"
				data-delete-form-trigger-value="category-delete"
				{{ stimulus_action('submit-confirm', 'onSubmit', 'submit') }}
		>
			<input type="hidden" name="token" value="{{ csrf_token('delete') }}"/>
		</form>
	</div>
</div>
