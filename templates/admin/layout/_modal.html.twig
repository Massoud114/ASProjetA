<div
	class="modal fade zoom"
	tabindex="-1"
	aria-hidden="true"
	{{ stimulus_target('modal-form', 'modal') }}
>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">{{ modalTitle }}</h5>
				<a href="#" class="close" data-bs-dismiss="modal" aria-label="Close">
					{{ icon('cross') }}
				</a>
			</div>
			<div
				class="modal-body"
				{{ stimulus_target('modal-form', 'modalBody') }}
				data-action="submit->modal-form#submitForm"
			>
				{{ modalContent|default('Chargement...') }}
			</div>
			<div class="modal-footer bg-light">
				<button
						type="button"
						class="btn btn-danger"
						data-bs-dismiss="modal"
				>
					Cancel
				</button>
				<button type="button" class="btn btn-success" data-action="modal-form#submitForm">Save</button>
			</div>
		</div>
	</div>
</div>
