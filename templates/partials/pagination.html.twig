{% if pageCount > 1 %}
	<ul class="pagination">
		{% if previous is defined %}
			<li class="page-item disabled">
				<a class="page-link" href="#">{{ 'prev'|trans }}</a>
			</li>
		{% else %}
			<li class="page-item">
				<a class="page-link" href="#" aria-label="Prev"><span aria-hidden="true">&laquo;</span></a>
			</li>
		{% endif %}

		{% if startPage > 1 %}
			<li class="page-item">
				<a class="page-link" href="#">1</a>
			</li>
			{% if startPage == 3 %}
				<li class="page-item">
					<a class="page-link" href="#">2</a>
				</li>
			{% elseif startPage != 2 %}
				<li class="page-item">
					<span class="page-link">{{ icon('more', 'h') }}</span>
				</li>
			{% endif %}
		{% endif %}

		{% for page in pagesInRange %}
			{% if page != current %}
				<li class="page-item">
					<a class="page-link" href="#">{{ page }}</a>
				</li>
			{% else %}
				<li class="page-item active">
					<a class="page-link" href="#">2</a>
				</li>
			{% endif %}
		{% endfor %}

		{% if pageCount > endPage %}
			{% if pageCount > (endPage + 1) %}
				{% if pageCount > (endPage + 2) %}
					<li class="page-item">
						<span class="page-link">{{ icon('more', 'h') }}</span>
					</li>
				{% else %}
					<li class="page-item">
						<a class="page-link" href="#">{{ pageCount - 1 }}</a>
					</li>
				{% endif %}
			{% endif %}
			<li class="page-item">
				<a class="page-link" href="#">{{ pageCount }}</a>
			</li>
		{% endif %}

		{% if next is defined %}
			<li class="page-item">
				<a class="page-link" href="#">Next</a>
			</li>
		{% else %}
			<li class="page-item disabled">
				<a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span></a>
			</li>
		{% endif %}
	</ul>
{% endif %}
