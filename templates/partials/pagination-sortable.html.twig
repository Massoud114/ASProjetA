<a {% for attr, value in options %} {{ attr }}="{{ value }}" {% endfor %}>
	<span>{{ title }}</span>
	{% if sorted %}
		<span style="float: right;">
			{% if direction == 'desc' %}
				{{ icon('upword-alt','fill') }}
			{% else %}
				{{ icon('downward-alt','fill') }}
			{% endif %}
		</span>
	{% endif %}
</a>
